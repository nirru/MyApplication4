<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/red"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FF6C5F5F"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"/>
            <LinearLayout
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                            <TextView
                                android:id="@+id/ubookname"
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:lines="1"
                                android:textColor="#FF4E4949"
                                android:textColorHint="#FFA79C9C"
                                android:padding="10dp"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:gravity="center_vertical"
                                android:hint="Book name "/>

                            <TextView
                                android:id="@+id/ubookdescription"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:textColor="#FF4E4949"
                                android:padding="10dp"
                                android:textColorHint="#FFA79C9C"
                                android:gravity="center_vertical"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:hint="book description"
                                android:inputType="text"/>

                            <TextView
                                android:id="@+id/ubookcategory"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:textColor="#FF4E4949"
                                android:textColorHint="#FFA79C9C"
                                android:padding="10dp"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:gravity="center_vertical"
                                android:hint="Book Category"
                                android:inputType="text"/>


                            <TextView
                                android:id="@+id/ubookpublication"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:textColor="#FF4E4949"
                                android:textColorHint="#FFA79C9C"
                                android:padding="10dp"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:gravity="center_vertical"
                                android:hint="Book publication"
                                android:inputType="text"/>


                            <TextView
                                android:id="@+id/ubookIsbno."
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:padding="10dp"
                                android:visibility="gone"
                                android:textColor="#FF4E4949"
                                android:textColorHint="#FFA79C9C"
                                android:textSize="14sp"
                                android:gravity="center_vertical"
                                android:hint="ISBN no"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:inputType="number"/>


                            <TextView
                                android:id="@+id/ubookauthor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:textColor="#FF4E4949"
                                android:textColorHint="#FFA79C9C"
                                android:gravity="center_vertical"
                                android:hint="Author name"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:inputType="text"
                                android:padding="10dp"/>


                            <TextView
                                android:id="@+id/ubookedition"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:padding="10dp"
                                android:textColor="#FF4E4949"
                                android:textColorHint="#FFA79C9C"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:gravity="center_vertical"
                                android:hint="Book edition "
                                android:inputType="text"/>
                        <TextView
                            android:id="@+id/book_language"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Book language"
                            android:padding="10dp"
                            android:textColor="#FF4E4949"
                            android:textColorHint="#FFA79C9C"
                            android:textAppearance="?android:textAppearanceSmall"/>


                            <TextView
                                android:id="@+id/ubookpages"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:padding="10dp"
                                android:textColor="#FF4E4949"
                                android:textColorHint="#FFA79C9C"
                                android:gravity="center_vertical"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:hint="Total no of pages"
                                android:inputType="number"/>

                            <TextView
                                android:id="@+id/ubookpublishingyear"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:padding="10dp"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:textColor="#FF4E4949"
                                android:textColorHint="#FFA79C9C"
                                android:gravity="center_vertical"
                                android:hint="Publishing year "
                                android:inputType="date"/>
                        <TextView
                            android:id="@+id/book_binding"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Book Binding"
                            android:padding="10dp"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:textColor="#FF4E4949"/>

                            <TextView
                                android:id="@+id/ubookprice"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:textColor="#FF4E4949"
                                android:textColorHint="#FFA79C9C"
                                android:padding="10dp"
                                android:gravity="center_vertical"
                                android:hint="Book price *"
                                android:inputType="number"
                                android:textAppearance="?android:textAppearanceSmall"/>





                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.v7.widget.CardView
                                android:id="@+id/card_view"
                                android:layout_width="125dp"
                                android:layout_height="125dp"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                card_view:cardCornerRadius="2dp"
                                android:layout_marginTop="20dp">
                                <Button

                                    android:layout_width="125dp"
                                    android:layout_height="wrap_content"
                                    android:text=" Front Book Images"
                                    android:id="@+id/ubuttonchoose"
                                    android:textSize="14sp" />

                                <ImageView
                                    android:layout_width="125dp"
                                    android:layout_height="125dp"
                                    android:id="@+id/ubookfrontimage"
                                    android:layout_weight="1"
                                    android:scaleType="fitXY"
                                    />
                            </android.support.v7.widget.CardView>
                            <android.support.v7.widget.CardView
                                android:id="@+id/card_view2"
                                android:layout_width="125dp"
                                android:layout_height="125dp"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                card_view:cardCornerRadius="2dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginLeft="20sp">
                                <Button
                                    android:layout_width="125dp"
                                    android:layout_height="wrap_content"
                                    android:text=" Spine Book Images"
                                    android:id="@+id/ubuttonspinechoose"
                                    android:textSize="14sp" />

                                <ImageView
                                    android:layout_width="125dp"
                                    android:layout_height="125dp"
                                    android:id="@+id/ubookspineimage"
                                    android:layout_weight="1"
                                    android:scaleType="fitXY"
                                    />
                            </android.support.v7.widget.CardView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp">

                            <android.support.v7.widget.CardView
                                android:id="@+id/card_view3"
                                android:layout_width="125dp"
                                android:layout_height="125dp"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                card_view:cardCornerRadius="2dp"
                                android:layout_marginTop="20dp">
                                <Button
                                    android:layout_width="125dp"
                                    android:layout_height="wrap_content"
                                    android:text=" Table of content"
                                    android:id="@+id/ubuttontableofcontent"
                                    android:textSize="14sp" />

                                <ImageView
                                    android:layout_width="125dp"
                                    android:layout_height="125dp"
                                    android:id="@+id/ubooktableofcontent"
                                    android:layout_weight="1"
                                    android:scaleType="fitXY"
                                    />
                            </android.support.v7.widget.CardView>
                            <android.support.v7.widget.CardView
                                android:id="@+id/card_view4"
                                android:layout_width="125dp"
                                android:layout_height="125dp"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                card_view:cardCornerRadius="2dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginLeft="20dp">
                                <Button
                                    android:layout_width="125dp"
                                    android:layout_height="wrap_content"
                                    android:text=" Back Book Images"
                                    android:id="@+id/ubuttonback"
                                    android:textSize="14sp" />

                                <ImageView
                                    android:layout_width="125dp"
                                    android:layout_height="125dp"
                                    android:id="@+id/ubookbackimage"
                                    android:layout_weight="1"
                                    android:scaleType="fitXY"
                                    />
                            </android.support.v7.widget.CardView>
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp" />

                    </LinearLayout>


                </ScrollView>


            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <Button
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/buttonUpload"
        android:background="#EF5350"
        android:text="BOOK UPLOAD"
        android:textColor="#fff"
        android:visibility="gone"
        android:layout_gravity="center"
        android:textSize="20sp" />


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.BookDetail"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="1">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/red"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:padding="10dp"
            android:layout_width="140dp"
            android:layout_height="180dp"
            app:srcCompat="@drawable/book4"
            android:id="@+id/imageView5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">
            <TextView
                android:text="Book Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="20sp" />


            <TextView
                android:text="Points:100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/point"
                android:layout_marginTop="10dp"
                android:textSize="18sp" />

            <RatingBar
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                style="?android:attr/ratingBarStyleSmall"
                android:id="@+id/ratingBar2"
                android:numStars="5"
                android:rating="2"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/buynow"
                android:id="@+id/buynow">

            </Button>


        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black_grey"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_vertical_margin"
        android:weightSum="2.0"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/linear_cart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical">
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/bwishlist"
                android:textColor="@color/White"
                android:theme="@style/Mywish"
                android:background="@drawable/wishlisticon"/>
            <TextView
                android:id="@+id/wisklist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to Wishlist"
                android:textColor="@color/black"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/borderproduct"
                android:textColor="@color/White"
                android:theme="@style/Mywish"
                android:background="@drawable/shopping_cart"/>
            <TextView
                android:id="@+id/buy_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to Cart"
                android:textColor="@color/black"
                />
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black_grey"
        android:layout_marginTop="10dp"/>

    <LinearLayout
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:visibility="gone">


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            app:srcCompat="@android:drawable/ic_search_category_default"
            android:id="@+id/imageButton5"
            android:layout_marginStart="110dp"/>

        <ImageButton
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/btn_star_big_on"
            android:id="@+id/imageButton2" />


    </LinearLayout>


<LinearLayout
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp">
    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:textSize="14sp"
        android:paddingTop="10dp"
        android:layout_marginLeft="10dp"
        android:paddingBottom="10dp">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="Read More ..."
        android:textColor="@color/Red"
        android:layout_gravity="center"
        android:id="@+id/readmore"
        android:textSize="14sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
    </TextView>
</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black_grey"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="62dp"
        android:background="@drawable/profile"
        android:id="@+id/imageView2"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"/>

    <RatingBar
        android:id="@+id/ratingReviewBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:numStars="5"/>
            
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black_grey"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_horizontal_margin">

                <EditText
                    android:id="@+id/post_review_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/send_btn"
                    android:background="@drawable/rounded_edittext"
                    android:padding="10dp"
                    android:layout_marginRight="10dp"
                    android:maxLines="5"
                    android:maxLength="200"
                    android:minLines="1"
                    android:lines="5"
                    android:inputType="textMultiLine"/>

                <ImageView
                    android:id="@+id/send_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerInside"
                    android:layout_marginTop="6dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_send_white_24dp"/>

            </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer Reviews"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:id="@+id/userReviewlist">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>


